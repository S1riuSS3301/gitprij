
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


// Models
model User {
  id            String        @id @default(cuid())
  email         String        @unique
  password      String
  name          String?
  role          String        @default("user")
  referralCode  String        @unique @default(cuid())
  referredBy    String?
  ip            String?
  banned        Boolean       @default(false)
  bannedBy      String?
  bannedAt      DateTime?
  resetToken    String?
  resetExpires  DateTime?
  createdAt     DateTime      @default(now())

  // Relations
  profile       Profile?
  orders        Order[]
  transactions  Transaction[]
  referrals     Referral[]    @relation("Referrer")
  referredReferrals Referral[] @relation("Referred")
  promoCodeUsages PromoCodeUsage[]
  notifications Notification[]
  logs          Log[]
}

model Profile {
  id        String   @id @default(cuid())
  userId    String   @unique
  balance   Float    @default(0)
  fullName  String?
  createdAt DateTime @default(now())

  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ServerPlan {
  id         String   @id @default(cuid())
  name       String
  nameRu     String
  cpu        Int
  ram        Int
  storage    Int
  bandwidth  Int
  price      Float
  popular    Boolean  @default(false)
  description String?

  // Relations
  orders     Order[]
}

enum BillingPeriod {
  monthly
  quarterly
  yearly
}

enum OrderStatus {
  active
  expired
  cancelled
}

model Order {
  id            String        @id @default(cuid())
  userId        String
  serverPlanId  String
  pricePaid     Float
  billingPeriod BillingPeriod @default(monthly)
  serverName    String
  vmId          String?       // VMmanager VM ID
  ip            String?       // Server IP address
  password      String?       // Root password
  os            String?       // OS ID
  status        OrderStatus   @default(active)
  expiresAt     DateTime
  createdAt     DateTime      @default(now())

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  serverPlan ServerPlan @relation(fields: [serverPlanId], references: [id], onDelete: Restrict)
}

model Transaction {
  id           String   @id @default(uuid())
  userId       String
  amount       Float
  currency     String   @default("USD")
  method       String
  status       String
  externalId   String?
  // The `type` field is not used in the application/database layer. Removing for schema clarity:
  type      String   @default("topup")
  description String?
  createdAt   DateTime @default(now())
  completedAt DateTime?

  user        User     @relation(fields: [userId], references: [id])
}

model Referral {
  id            String   @id @default(cuid())
  referrerId    String
  referredId    String   @unique
  earnings      Float    @default(0)
  createdAt     DateTime @default(now())

  referrer      User     @relation("Referrer", fields: [referrerId], references: [id], onDelete: Cascade)
  referred      User     @relation("Referred", fields: [referredId], references: [id], onDelete: Cascade)
}

model PromoCode {
  id        String   @id @default(cuid())
  code      String   @unique
  discount  Float
  type      String   // 'percent' or 'fixed'
  maxUses   Int
  used      Int      @default(0)
  expiresAt DateTime
  active    Boolean  @default(true)
  createdAt DateTime @default(now())

  usages    PromoCodeUsage[]
}

model PromoCodeUsage {
  id          String   @id @default(cuid())
  promoCodeId String
  userId      String
  usedAt      DateTime @default(now())

  promoCode   PromoCode @relation(fields: [promoCodeId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Notification {
  id        String   @id @default(cuid())
  type      String   // 'email' or 'in-app'
  subject   String?
  message   String
  recipients String? // JSON array of emails or user IDs
  sentBy    String
  sentAt    DateTime @default(now())

  sender    User     @relation(fields: [sentBy], references: [id])
}

model Setting {
  id    String @id @default(cuid())
  key   String @unique
  value String
}

model Log {
  id        String   @id @default(cuid())
  userId    String?
  action    String
  details   String?
  ip        String?
  userAgent String?
  createdAt DateTime @default(now())

  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
}
